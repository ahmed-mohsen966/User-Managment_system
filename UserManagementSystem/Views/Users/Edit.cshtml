@model ProfileFormViewModel


@{
    ViewData["Title"] = "Edit Profile";
}


<div class="row">
    <div class="col-md-8">
        <h4>Create New User</h4>
        <form id="registerForm" asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Fname" class="form-control" autocomplete="First-Name" aria-required="true" placeholder="First Name" maxlength="100" />
                <label asp-for="Fname">First Name</label>
                <span asp-validation-for="Fname" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Lname" class="form-control" autocomplete="Last-Name" aria-required="true" placeholder="Last Name" maxlength="100" />
                <label asp-for="Lname">Last Name</label>
                <span asp-validation-for="Lname" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="UserName" class="form-control" autocomplete="User-Name" aria-required="true" placeholder="User Name" maxlength="100" />
                <label asp-for="UserName">User Name</label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary d-block mt-4">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}